<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF200"
    android:orientation="vertical"
    android:id="@+id/back_end_layout_root">    
               
	<Button
		android:id="@+id/back_end_btn_product_new"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginBottom="16dp"
		android:layout_marginRight="8dp"
		android:layout_marginTop="16dp"
		android:layout_gravity="right"
		android:text="@string/btn_new_product" />
		
	<ViewSwitcher
	    android:id="@+id/back_end_view_switcher"
	    android:layout_width="match_parent"
        android:layout_height="match_parent">
		    
		<TextView 
    		android:id="@+id/back_end_text_view_empty"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_gravity="center"
		    android:text="@string/empty"/>
		   
		<ListView
			android:id="@+id/back_end_list_view"
			android:layout_width="match_parent"
			android:layout_height="match_parent" />
			
	</ViewSwitcher>	    
				
</LinearLayout>
