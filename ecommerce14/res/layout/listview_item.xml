<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/list_view_layout_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="16dp"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingTop="16dp" >
	
	<LinearLayout
        android:id="@+id/listview_item_linear_layout01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginRight="16dp"
        android:layout_centerVertical="true">
        
	    <TextView
			android:id="@+id/listview_item_product_name"
			android:layout_height="wrap_content"
			android:layout_width="0dp"
			android:text="@null"
			android:lines="1"
	        android:maxLines="1"
	        android:scrollHorizontally="true"
	        android:ellipsize="end"
			android:textSize="20sp"
			android:layout_weight="1">
		</TextView>	
				
	    <TextView
			android:id="@+id/listview_item_product_count"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@null"
			android:textColor="#A9A9A9"
			android:layout_marginLeft="16dp"
			android:layout_marginRight="16dp"
			android:lines="1"
	        android:maxLines="1"
	        android:scrollHorizontally="true"
	        android:ellipsize="end"
			android:textSize="20sp" >
		</TextView>
						   
	</LinearLayout>
	
	<ImageView
		android:id="@+id/listview_item_img_view"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:paddingTop="8dp"
		android:paddingBottom="8dp"
		android:contentDescription="@string/img_desc"
		android:src="@drawable/arrow_forward_16"
		android:layout_alignParentRight="true"
		android:layout_alignBaseline="@+id/listview_item_linear_layout01"
		android:layout_centerVertical="true">
	</ImageView>	
	 	 
</RelativeLayout>
