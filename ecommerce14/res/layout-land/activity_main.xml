<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="andrew.dubov.ecommerce14.activities.MainActivity" >
    
	<FrameLayout
        android:id="@+id/activity_main_frame_layout_hide"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
      	android:visibility="gone">
    
	    <fragment 
	        android:id="@+id/fragment_main"
	        android:name="andrew.dubov.ecommerce14.fragments.MainFragment"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"/>
	    
    </FrameLayout>    
    
    <FrameLayout
        android:id="@+id/activity_main_frame_layout_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#FF0000">
        
    </FrameLayout>
    
    <FrameLayout
        android:id="@+id/activity_main_frame_layout_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00FF00">
        
    </FrameLayout>
	
</LinearLayout>
